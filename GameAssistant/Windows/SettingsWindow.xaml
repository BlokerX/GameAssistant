<Window x:Class="GameAssistant.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:controls="clr-namespace:GameAssistant.Controls"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="800">

    <Grid Background="#FF2E2D29">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Width="100" Background="#FF1C1A1A">

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <Button Content="Clock Widget" Grid.Row="0" 
                    Style="{StaticResource MenuButton}"
                    Click="ClockWidgetButton_Click"/>

            <Button Content="Picture Widget" Grid.Row="2"
                    Style="{StaticResource MenuButton}"
                    Click="PictureWidgetButton_Click"/>

            <Button Content="Note Widget" Grid.Row="4"
                    Style="{StaticResource MenuButton}"
                    Click="NoteWidgetButton_Click"/>

            <Button Content="About" Grid.Row="6"
                    Style="{StaticResource MenuButton}"/>

        </Grid>

        <ScrollViewer Grid.Column="1">

            <Grid Margin="10">

            <Grid x:Name="ClockWidgetGrid">

                <StackPanel>

                    <Label Content="Clock Widget - configuration settings"
                           FontSize="24"
                           Foreground="White"/>

                    <StackPanel Margin="5,0,0,0">

                        <Label Content="Visibility:"
                               FontSize="18"
                               Foreground="White"/>

                        <StackPanel Margin="2,0,0,0">

                            <controls:BoolSettingProperty PropertyName="Active:"/>

                        </StackPanel>

                    </StackPanel>

                    <StackPanel Margin="5,0,0,0">

                        <Label Content="Colors:"
                               FontSize="18"
                               Foreground="White"/>

                        <StackPanel Margin="2,0,0,0">

                            <controls:ColorSettingProperty PropertyName="Background color:"/>
                            <controls:ColorSettingProperty PropertyName="Foreground color:"/>

                        </StackPanel>

                    </StackPanel>

                    <StackPanel Margin="5,0,0,0">

                        <Label Content="Opacity:"
                               FontSize="18"
                               Foreground="White"/>

                        <StackPanel Margin="2,0,0,0">

                            <controls:DecimalSettingProperty PropertyName="Background opacity:"/>
                            <controls:DecimalSettingProperty PropertyName="Foreground opacity:"/>

                        </StackPanel>

                    </StackPanel>

                    <StackPanel Margin="5,0,0,0">

                        <Label Content="Font:"
                               FontSize="18"
                               Foreground="White"/>

                        <StackPanel Margin="2,0,0,0">

                                <controls:FontSettingProperty/>

                            </StackPanel>
                        
                    </StackPanel>

                    <StackPanel Margin="5,0,0,0">

                        <Label Content="Other:"
                               FontSize="18"
                               Foreground="White"/>

                        <StackPanel Margin="2,0,0,0">

                            <controls:BoolSettingProperty PropertyName="Can resize:"/>
                            <controls:BoolSettingProperty PropertyName="Drag active:"/>

                        </StackPanel>

                    </StackPanel>

                </StackPanel>

            </Grid>

        </Grid>

        </ScrollViewer>
        
    </Grid>

</Window>
